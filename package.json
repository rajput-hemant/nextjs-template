{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "fmt": "prettier --write \"**/*.{ts,tsx,mdx,json}\" --cache",
    "fmt:check": "prettier --check \"**/*.{ts,tsx,mdx,json}\" --cache",
    "clean": "rm -rf .next",
    "cleani": "rm -rf .next && rm -rf node_modules && bun i",
    "prepare": "husky"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.11.0",
    "@trpc/client": "^11.0.0-rc.477",
    "@trpc/react-query": "^11.0.0-rc.477",
    "@trpc/server": "^11.0.0-rc.477",
    "babel-plugin-react-compiler": "^0.0.0-experimental-334f00b-20240725",
    "clsx": "^2.1.1",
    "geist": "^1.3.1",
    "lucide-react": "^0.427.0",
    "next": "^15.0.0-rc.0",
    "next-themes": "^0.3.0",
    "react": "^19.0.0-rc-2d2cc042-20240809",
    "react-dom": "^19.0.0-rc-2d2cc042-20240809",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "22.1.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-9ed098e-20240725",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "postcss": "8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "3.4.7",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,md,mdx}": [
      "prettier --write \"**/*.{ts,tsx,mdx}\" --cache"
    ],
    "*.{ts,tsx,mdx}": [
      "eslint --fix ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20.16.0"
  }
}
